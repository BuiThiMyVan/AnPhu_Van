@model PageInfo<ProductProperties>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Auth/Views/Shared/_LayoutAuth.cshtml";
    var productId = (int)@ViewBag.ProductId;
}

@section StyleSheet {
    <style>
        .container-admin {
            font-size: 13px;
        }

            .container-admin .header-admin {
                margin: 0 8px;
                margin-bottom: 12px;
                font-size: 24px;
                font-weight: lighter;
                color: #2679b5;
                border-bottom: 1px dotted #e2e2e2;
                padding-bottom: 16px;
                padding-top: 7px;
            }

            .container-admin .header-table {
                padding: 12px;
                background-color: #EFF3F8;
                display: flex;
                justify-content: space-between;
            }

        .paginate {
            display: flex;
            justify-content: space-between;
            background-color: #EFF3F8;
            padding: 20px;
        }

        .head-sort {
            position: relative;
        }

        .sort-icon {
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: absolute;
            right: 8px;
            top: 50%;
            transform: translateY(-50%);
        }

            .sort-icon:hover {
                cursor: pointer;
            }

            .sort-icon i {
                height: 5px;
            }
    </style>
}

<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">Home</a>
        </li>
        <li><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
        <li><a href="@Url.Action("Index", "Product")">Danh sách sản phẩm</a></li>
        <li><a href="@Url.Action("Index", "ProductProperties", new { productId = productId})">Danh sách thuộc tính</a></li>
    </ul>
</div>

<div class="container-admin">
    <div class="header-admin">Danh sách thuộc tính xe</div>
    <div class="content-admin">
        <div class="header-table">
            <div class="filter-select">
                <span>Display</span>
                <select id="pageSize" name="pageSize" onchange="updatePageSize()" value="@Model.PageSize">
                    @foreach (var index in ViewBag.listPageSize)
                    {
                        if (index == @Model.PageSize)
                        {
                            <option value="@index" selected>@index</option>
                        }
                        else
                        {
                            <option value="@index">@index</option>
                        }
                    }
                </select>
                <span>records</span>
            </div>
            <div class="search-box">
                <span>Search:</span>
                <input type="text" id="txtSearch" name="name" onkeyup="search(event)" />
            </div>
        </div>
        <div class="content-table">
            <table id="simple-table" class="table table-striped table-bordered table-hover" style="margin-bottom: 0px">
                <thead>
                    <tr>
                        <th class="head-sort">
                            Tên thuộc tính
                            <div class="sort-icon">
                                <i class="fa fa-caret-up"></i>
                                <i class="fa fa-sort-down"></i>
                            </div>
                        </th>
                        <th class="head-sort">
                            Tên xe
                            <div class="sort-icon">
                                <i class="fa fa-caret-up"></i>
                                <i class="fa fa-sort-down"></i>
                            </div>
                        </th>
                        <th class="hidden-480 head-sort">
                            Status
                            <div class="sort-icon">
                                <i class="fa fa-caret-up"></i>
                                <i class="fa fa-sort-down"></i>
                            </div>
                        </th>

                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (ProductProperties item in Model.DataList)
                    {
                        <tr>
                            <td>@item.ProductPropertyTitle</td>
                            <td class="hidden-480">@ViewBag.ProductName</td>
                            <td class="hidden-480">
                                @if (item.IsActive == true)
                                {
                                    <span class="label label-sm label-success">Is Active</span>

                                }
                                else
                                {
                                    <span class="label label-sm label-danger">UnActive</span>

                                }
                            </td>

                            <td>
                                <div class="hidden-sm hidden-xs btn-group">
                                    <button class="btn btn-xs btn-info" onclick="window.location.href='/vi/quan-tri/danh-sach-thuoc-tinh/cap-nhat?productId=@ViewBag.ProductId'+ '&productPropertyId='+ @item.ProductPropertyId">
                                        <i class="ace-icon fa fa-pencil bigger-120"></i>
                                    </button>
                                    <button class="btn btn-xs btn-danger" onclick="confirmDelete(@item.ProductPropertyId, @productId)">
                                        <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                    </button>
                                </div>

                                <div class="hidden-md hidden-lg">
                                    <div class="inline pos-rel">
                                        <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                            <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                        </button>

                                        <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                            <li>
                                                <a href="'/vi/quan-tri/danh-sach-thuoc-tinh/cap-nhat?reviewId='+ @item.ProductPropertyId" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                    <span class="green">
                                                        <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                    </span>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="'/vi/quan-tri/danh-sach-thuoc-tinh/xoa?reviewId='+ @item.ProductId" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                    <span class="green">
                                                        <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                    </span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
            <div class="paginate no-margin-top">
                <div class="dataTables_info" id="dynamic-table_info" role="status" aria-live="polite">@ViewBag.pageView</div>

                <ul class="pagination pull-right no-margin" style="display: inline-block">
                    <li class="prev">
                        <a href="javascript:void(0);" onclick="prev()">
                            Previous
                        </a>
                    </li>
                    @for (var i = 0; i < Model.PageCount; i++)
                    {
                        if ((i + 1) == Model.PageIndex)
                        {
                            <li class="active">
                                <a href="javascript:void(0);" onclick="goToPage(@(i+1))">@(i + 1)</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="javascript:void(0);" onclick="goToPage(@(i+1))">@(i + 1)</a>
                            </li>
                        }
                    }

                    <li class="next">
                        <a href="javascript:void(0);" onclick="next()">
                            Next
                        </a>
                    </li>
                </ul>
            </div>
            <a href="/vi/quan-tri/danh-sach-thuoc-tinh/tao-moi?productId=@ViewBag.ProductId" class="btn btn-success">Tạo mới</a>
        </div>
    </div>
</div>
@section Scripts {
    <script>
    var pageIndex = @Model.PageIndex;
    var pageSize = @Model.PageSize;

    function updatePageSize() {
        var pageSizeUpdate = $('#pageSize').val();
        debugger
        window.location.href = "/vi/quan-tri/danh-sach-thuoc-tinh/danh-sach?productId=" + @productId + "&page=" + pageIndex + "&pageSize=" + pageSizeUpdate;
        debugger
    }

    function search(e) {
        var txtSearch = $('#txtSearch').val().trim();
        if (e.key === 'Enter' || e.keyCode === 13) {
            window.location.href = "/vi/quan-tri/danh-sach-thuoc-tinh/danh-sach?productId=" + @productId + "&page=" + pageIndex + "&pageSize=" + pageSize + "&txtSearch=" + txtSearch;
        }

    }

    function prev() {
        if (pageIndex > 1) {
            pageIndex--;
            window.location.href = "/vi/quan-tri/danh-sach-thuoc-tinh/danh-sach?productId=" + @productId + "&page=" + pageIndex + "&pageSize=" + pageSize;
        }

    }

    function next() {
        if (pageIndex < @Model.PageCount) {
            pageIndex++;
            window.location.href = "/vi/quan-tri/danh-sach-thuoc-tinh/danh-sach?productId=" + @productId + "&page=" + pageIndex + "&pageSize=" + pageSize;
        }

    }

    function goToPage(index) {
        var txtSearch = $('#txtSearch').val().trim();
            window.location.href = "/vi/quan-tri/danh-sach-thuoc-tinh/danh-sach?productId=" + @productId + "&page=" + index + "&pageSize=" + pageSize + "&txtSearch=" + txtSearch;
        }

        function confirmDelete(propertyId, productId) {

            if (confirm("Bạn muốn xóa bài viết có mã " + propertyId + " ?") == true) {
            window.location.href = '/vi/quan-tri/danh-sach-thuoc-tinh/xoa?propertyId=' + propertyId + '&productId=' + productId;
        } else {
            return false;
        }
    }
    </script>
}

