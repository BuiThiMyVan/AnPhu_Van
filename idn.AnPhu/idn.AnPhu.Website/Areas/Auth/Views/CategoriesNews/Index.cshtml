
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Auth/Views/Shared/_LayoutAuth.cshtml";
}

@section StyleSheet {
    <style>
        .container-admin {
            font-size: 13px;
        }
        .container-admin .header-admin {
            margin: 0 8px;
            margin-bottom: 12px;
            font-size: 24px;
            font-weight: lighter;
            color: #2679b5;
            border-bottom: 1px dotted #e2e2e2;
            padding-bottom: 16px;
            padding-top: 7px;
        }

            .container-admin .header-table {
                padding: 12px;
                background-color: #EFF3F8;
                display: flex;
                justify-content: space-between;
            }

        
    </style>    
}

<div class="container-admin">
    <div class="header-admin">Danh sách danh mục tin tức</div>
    <div class="content-admin">
        <div class="header-table">
            <div class="filter-select">
                <span>Display</span>
                <select>
                    <option value="value">10</option>
                    <option value="value">15</option>
                    <option value="value">20</option>
                </select>
                <span>records</span>
            </div>
            <div class="search-box">
                <span>Search:</span>
                <input type="text" name="name" value="" />
            </div>
        </div>
        <div class="content-table">
            <table id="simple-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Tên danh mục</th>
                        <th class="hidden-480">Người tạo</th>

                        <th>
                            <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                            Ngày tạo
                        </th>
                        <th class="hidden-480">Status</th>

                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>$45</td>
                        <td class="hidden-480">3,330</td>
                        <td>Feb 12</td>

                        <td class="hidden-480">
                            <span class="label label-sm label-warning">Expiring</span>
                        </td>

                        <td>
                            <div class="hidden-sm hidden-xs btn-group">
                                <button class="btn btn-xs btn-success">
                                    <i class="ace-icon fa fa-check bigger-120"></i>
                                </button>

                                <button class="btn btn-xs btn-info" onclick="window.location.href='/vi/quan-tri/danh-muc-tin-tuc/cap-nhat?newsCategoryId=1'">
                                    <i class="ace-icon fa fa-pencil bigger-120"></i>
                                </button>

                                <button class="btn btn-xs btn-danger">
                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                </button>

                                <button class="btn btn-xs btn-warning">
                                    <i class="ace-icon fa fa-flag bigger-120"></i>
                                </button>
                            </div>

                            <div class="hidden-md hidden-lg">
                                <div class="inline pos-rel">
                                    <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                        <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                    </button>

                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                        <li>
                                            <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                                <span class="blue">
                                                    <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>

                                        <li>
                                            <a href="#" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                <span class="green">
                                                    <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>

                                        <li>
                                            <a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                <span class="red">
                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <a href="/vi/quan-tri/danh-muc-tin-tuc/tao-moi" class="btn btn-success">Tạo mới</a>
        </div>
    </div>
    
</div>

