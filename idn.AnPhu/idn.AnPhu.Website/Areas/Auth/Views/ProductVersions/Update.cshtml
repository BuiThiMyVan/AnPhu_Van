@model ProductVersions
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Auth/Views/Shared/_LayoutAuth.cshtml";
    var message = CUtils.StrValue(ViewBag.message);
    var productId = (int)@ViewBag.ProductId;
}

@section StyleSheet {
    <style>
        .container-admin {
            font-size: 13px;
        }

            .container-admin .header-admin {
                margin: 0 8px;
                margin-bottom: 12px;
                font-size: 24px;
                font-weight: lighter;
                color: #2679b5;
                border-bottom: 1px dotted #e2e2e2;
                padding-bottom: 16px;
                padding-top: 7px;
            }

            .container-admin .header-table {
                padding: 12px;
                background-color: #EFF3F8;
                display: flex;
                justify-content: space-between;
            }

        .input-number {
            width: 78px;
        }

        .box-input {
            display: flex;
            flex-direction: column;
        }

        .text-danger {
            margin-top: 8px;
        }

        .btn-success {
            margin-left: 16px;
        }

        .area-text {
            font-weight: bold;
        }
    </style>
}

<ul class="breadcrumb">
    <li>
        <i class="ace-icon fa fa-home home-icon"></i>
        <a href="#">Home</a>
    </li>
    <li><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
    <li><a href="@Url.Action("Index", "Product")">Danh sách xe</a></li>
    <li><a href="@Url.Action("Index", "ProductVersions", new { productId = productId })">Danh sách phiên bản</a></li>
    @if (ViewBag.IsEdit != null && ViewBag.IsEdit == true)
    {
        <li class="active">@Model.VersionTitle</li>
    }
    else
    {
        <li class="active">Tạo mới phiên bản</li>
    }
</ul>

<div class="container-admin">
    <div class="header-admin">@Model.VersionTitle</div>
    <div class="content-admin">
        <div class="content-table">
            @using (Html.BeginForm("Update", "ProductVersions", FormMethod.Post, new { id = "manageForm", @class = "form-horizontal", onsubmit = "checkValid(event)" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">
                        Tên mẫu xe:
                    </label>

                    <div class="col-sm-9 box-input">
                        <input type="hidden" name="VersionId" value="@Model.VersionId" class="col-xs-12 col-sm-6" />
                        <input type="hidden" name="ProductId" value="@ViewBag.ProductId" id="ProductId" class="col-xs-12 col-sm-6" />
                        <input type="text" name="VersionTitle" value="@Model.VersionTitle" class="col-xs-12 col-sm-6" oninput="validateEmpty(event)" />
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-2">
                        Mô tả:
                    </label>

                    <div class="col-sm-9 box-input">
                        <textarea type="text" name="VersionDescription" rows="2" class="col-xs-12 col-sm-6" oninput="validateEmpty(event)">@Model.VersionDescription</textarea>
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-2">
                        Giá sản phẩm:
                    </label>

                    <div class="col-sm-9 box-input">
                        <input type="number" name="VersionPrice" value="@Model.VersionPrice" class="col-xs-12 col-sm-6" oninput="validateEmpty(event)" />
                        <div class="text-danger"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right area-text" for="form-field-2">
                        Khu vực Hà Nội
                    </label>

                    <div class="col-sm-9 box-input">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-2">
                        Phí trước bạ(%):
                    </label>

                    <div class="col-sm-9 box-input">
                        <input type="number" name="RegistrationFeeHN" value="@Model.RegistrationFeeHN" class="col-xs-12 col-sm-6" oninput="validateEmpty(event)" />
                        <div class="text-danger"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-2">
                        Phí biển số:
                    </label>

                    <div class="col-sm-9 box-input">
                        <input type="number" name="LicenseFeeHN" value="@Model.LicenseFeeHN" class="col-xs-12 col-sm-6" oninput="validateEmpty(event)" />
                        <div class="text-danger"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-2">
                        Phí đường bộ:
                    </label>

                    <div class="col-sm-9 box-input">
                        <input type="number" name="RoadTaxHN" value="@Model.RoadTaxHN" class="col-xs-12 col-sm-6" oninput="validateEmpty(event)" />
                        <div class="text-danger"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-2">
                        Phí đăng kiểm:
                    </label>

                    <div class="col-sm-9 box-input">
                        <input type="number" name="CertificateFeeHN" value="@Model.CertificateFeeHN" class="col-xs-12 col-sm-6" oninput="validateEmpty(event)" />
                        <div class="text-danger"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-2">
                        Bảo hiểm TNDS:
                    </label>

                    <div class="col-sm-9 box-input">
                        <input type="number" name="InsuranceFeeHN" value="@Model.InsuranceFeeHN" class="col-xs-12 col-sm-6" oninput="validateEmpty(event)" />
                        <div class="text-danger"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right area-text" for="form-field-2">
                        Khu vực Hồ Chí Minh
                    </label>

                    <div class="col-sm-9 box-input">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-2">
                        Phí trước bạ(%):
                    </label>

                    <div class="col-sm-9 box-input">
                        <input type="number" name="RegistrationFeeHCM" value="@Model.RegistrationFeeHCM" class="col-xs-12 col-sm-6" oninput="validateEmpty(event)" />
