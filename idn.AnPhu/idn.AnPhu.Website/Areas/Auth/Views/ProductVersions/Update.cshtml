                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-2">
                        Bảo hiểm TNDS:
                    </label>

                    <div class="col-sm-9 box-input">
                        <input type="number" name="InsuranceFeeKHAC" value="@Model.InsuranceFeeKHAC" class="col-xs-12 col-sm-6" oninput="validateEmpty(event)" />
                        <div class="text-danger"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-2">
                        Thứ tự:
                    </label>

                    <div class="col-sm-9">
                        <input type="number" name="OrderNo" class="col-xs-12 col-sm-6 input-number" value="@Model.OrderNo" />
                    </div>
                </div>

                <div class="form-group">
                    @{var check = Model.IsActive ? "checked" : "";}
                    <label class="col-sm-3 control-label no-padding-right">
                        Trạng thái:
                    </label>

                    <div class="checkbox">
                        <label>
                            <input name="IsActive" type="checkbox" class="ace" value="true" @check>

                            <span class="lbl"> Ẩn/Hiện danh mục</span>
                            <input name="IsActive" type="hidden" value="false" />
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    @{var register = Model.IsRegister ? "checked" : "";}
                    <label class="col-sm-3 control-label no-padding-right">
                        Mẫu xe lái thử:
                    </label>

                    <div class="checkbox">
                        <label>
                            <input name="IsRegister" type="checkbox" class="ace" value="true" @register>
                            <span class="lbl"> Đúng/Sai</span>
                            <input name="IsRegister" type="hidden" value="false" />
                        </label>
                    </div>
                </div>
                <button type="submit" id="btn_submit_save" class="btn btn-success">Lưu</button>
            }
        </div>
    </div>

</div>
@section Scripts {
    <script src="/Scripts/tinymce/tinymce.min.js"></script>
    <script>
        $('#btn_submit_save').click(function () {
            $("#manageForm").attr("action", '@Url.ActionLocalized("Update")').submit();
        });

        function validateEmpty(e) {
            if ($(e.target).val() == '') {
                $(e.target).next().text('Bạn không được để trống');
            } else {
                $(e.target).next().text('');
            }
        }

        function checkValid(e) {
            var inputs = $('input, textarea');
            var bug = 0;

            for (var i = 1; i < inputs.length; i++) {
                if ($(inputs[i]).val() == '') {
                    $(inputs[i]).next().text('Bạn không được để trống');
                    bug++;
                }
            }

            if (bug > 0) {
                e.preventDefault();
            } else {
                return true;
            }
        }

        var message = '@MvcHtmlString.Create(message)';
        console.log(message);
        $(document).ready(function () {
            if (message.trim() != null && message.trim() != '') {
                alert(message);
            }
        })
    </script>
}


